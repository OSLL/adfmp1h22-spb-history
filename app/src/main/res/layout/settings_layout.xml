<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="420dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="10dp" />


    <Button
        android:id="@+id/color_button"
        android:layout_width="214dp"
        android:layout_height="66dp"
        android:text="Цвет текста"
        app:layout_constraintBottom_toTopOf="@+id/font_button"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"
        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"
        app:layout_constraintRight_toRightOf="@+id/right_guideLine"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"
        app:layout_constraintTop_toTopOf="@+id/top_guideLine"
        app:layout_constraintVertical_bias="10.913" />

    <!--        app:layout_constraintTop_toBottomOf="@+id/start_button"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/help_button"-->


    <Button
        android:id="@+id/font_button"
        android:layout_width="214dp"
        android:layout_height="66dp"
        android:text="Шрифт"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"
        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"
        app:layout_constraintRight_toRightOf="@+id/right_guideLine"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/color_button"
        app:layout_constraintBottom_toTopOf="@+id/calibrate_button"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/calibrate_button"
        android:layout_width="214dp"
        android:layout_height="66dp"
        android:text="Калибровка"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideLine"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"
        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"
        app:layout_constraintRight_toRightOf="@+id/right_guideLine"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/font_button"
        app:layout_constraintVertical_bias="0.077" />


</androidx.constraintlayout.widget.ConstraintLayout>